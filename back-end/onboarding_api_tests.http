Content-Type: application/json
Authorization: Bearer {{token}}

{
    "hormonalInfo": {
        "regularCycle": true,
        "currentPhase": "Luteal",
        "cycleLength": 28,
        "periodLength": 5,
        "birthControlHRT": false,
        "hasUterus": true
    },
    "dailyReminders": {
        "dailyReminder": false,
        "reminderTime": "09:00"
    },
    "aiInsights": {
        "showFENYXInsights": true
    },
    "lifestylePreferences": {
        "dietaryStyles": [1, 2, 3],
        "activityLevel": 1,
